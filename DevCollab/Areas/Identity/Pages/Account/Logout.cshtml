@page
@model LogoutModel
@{
    ViewData["Title"] = "Delogare";
}

<header>
    <h1 id="h-cont">@ViewData["Title"]</h1>
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Apasă aici pentru a te deloga</button>
            </form>
        }
        else
        {
            <p>Te-ai delogat cu succes.</p>
        }
    }
</header>
