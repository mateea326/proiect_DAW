@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Șterge datele personale";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3>@ViewData["Title"]</h3>

<div role="alert">
    <p>
        <strong>Ștergerea acestor date va elimina permanent acest cont, iar datele nu vor mai putea fi recuperate.</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                <label asp-for="Input.Password" class="form-label">Parolă</label>
                <span asp-validation-for="Input.Password" class="text-danger">Parola este obligatorie</span>
            </div>
        }
        <button class="w-100 btn btn-lg btn-danger" type="submit">Șterge datele și închide contul meu</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
