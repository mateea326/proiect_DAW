
@page
@model LoginModel

@{
    ViewData["Title"] = "Logare";
}

<h1 id="h-cont">@ViewData["Title"]</h1>
<div class="row" id="inregistrare">
        <section>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger">Email-ul este obligatoriu</span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                <label asp-for="Input.Password" class="form-label">Parolă</label>
                <span asp-validation-for="Input.Password" class="text-danger">Parola este obligatorie</span>
                </div>
                <br />
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                        Rămâne logat
                        </label>
                    </div>
                </div>
                <br />
                <div>
                    <button id="buton2" type="submit" class="w-100 btn btn-lg btn-secondary">Logare</button>
                </div>
                <br />
                <div>
                <p>
                    <a id="link" id="forgot-password" asp-page="./ForgotPassword">Am uitat parola</a>
                    </p>
                   
                <p>
                    <a id="link" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Cont nou</a>
                    </p>
                   
                <p>
                    <a id="link" id="resend-confirmation" asp-page="./ResendEmailConfirmation">Retrimite confirmarea email-ului</a>
                </p>
                </div>
            </form>
        </section>
