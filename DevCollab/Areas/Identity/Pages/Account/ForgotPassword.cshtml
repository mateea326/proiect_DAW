@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Ai uitat parola?";
}

<h1 id="h-cont">@ViewData["Title"]</h1>
<h2>Introduce email-ul.</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger">Email-ul este obligatoriu</span>
            </div>
            <br />
            <button id="buton2" type="submit" class="w-100 btn btn-lg btn-secondary">Resetează parola</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
