@page
@model RegisterModel
@{
    ViewData["Title"] = "Cont nou";
}

<h1 id="h-cont">@ViewData["Title"]</h1>

<div id="inregistrare" class="row">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
            <span asp-validation-for="Input.Email" class="text-danger">Email-ul este obligatoriu</span>
            </div>
        <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
            <label asp-for="Input.Password">Parolă</label>
            <span asp-validation-for="Input.Password" class="text-danger">Parola este obligatorie</span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
            <label asp-for="Input.ConfirmPassword">Confirmă parola</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <br />
        <button id="buton2" type="submit" class="w-100 btn btn-lg btn-secondary">Înregistrează-te</button>
        </form>
