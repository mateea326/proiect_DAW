@model DevCollab.Models.Subject

<h2 id="h-subjects">Subiect nou</h2>

<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">
            @using (Html.BeginForm(actionName: "New", controllerName: "Subjects", method: FormMethod.Post))
            {
               @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                @Html.Label("Title", "Titlul subiectului")
                <br />

                @Html.TextBox("Title", null, new { @class = "form-control" })

                @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
                <br />
                <br />

                @Html.Label("Content", "Conținut întrebare")
                <br />

                @Html.TextArea("Content", null, new { @class = "summernote" })
                //@Html.TextArea("Content", null, new { @class = "form-control" })

                @Html.ValidationMessage("Content", null, new { @class = "text-danger" })
                <br />
                <br />

                <label>Selectați categoria</label>

                @Html.DropDownListFor(m => m.CategoryId, new SelectList(Model.Categ, "Value", "Text"),
            "Selectați categoria", new { @class = "form-control" })

                @Html.ValidationMessageFor(m => m.CategoryId, null, new { @class = "text-danger" })
                <br />
                <br />

                <button id="buton" class="btn btn-secondary" type="submit">Adaugă întrebare</button>
            }
        </div>
    </div>
</div>







