<h2 id="h-subjects">Utilizatori</h2>
<br />
<br />

<div class="row">
@foreach (var user in ViewBag.UsersList)
{
    <div class="col-4 mb-4">
            <div class="card" style="height:100%; width: 100%;">
        
            <div class="card-body d-flex justify-content-between flex-column">
                <div>
                        <p><i class="bi bi-person"> </i> Nume utilizator: @user.UserName</p>

                        <p><i class="bi bi-envelope"></i> Email: @user.Email</p>


                    @if (@user.FirstName != null)
                    {
                            <p><i class="bi bi-person"> </i> Nume: @user.FirstName</p>
                    }


                    @if (@user.LastName != null)
                    {
                            <p><i class="bi bi-person"> </i> Prenume: @user.LastName</p>
                    }


                    @if (@user.PhoneNumber != null)
                    {
                            <p><i class="bi bi-phone"></i> Număr de telefon: @user.PhoneNumber</p>
                    }

                </div>
                <div class="d-flex flex-column justify-content-evenly p-1">

                    <div> <a class="btn btn-secondary" id="buton" href="/Users/Edit/@user.Id"> Editare utilizator</a> </div>
                    <br>
                    <div> <a class="btn btn-secondary" id="buton" href="/Users/Show/@user.Id"> Vizualizare utilizator</a> </div>

                </div>
            </div>

         </div>
    </div>
}
   
</div>

