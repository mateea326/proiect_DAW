@model DevCollab.Models.ApplicationUser

@using (Html.BeginForm(actionName: "Edit", controllerName: "Users",
       method: FormMethod.Post, routeValues: new { id = @Model.Id }))
{

    <i class="bi bi-person"></i>
    @Html.Label("Username", "Nume utilizator", new { @class = "" })

    <br />

    @Html.EditorFor(m => m.UserName)

    <br />

    <i class="bi bi-envelope"></i>
    @Html.Label("Email", "Email", new { @class = "" })

    <br />

    @Html.EditorFor(m => m.Email)

    <br />

    <i class="bi bi-phone"></i>
    @Html.Label("PhoneNumber", "Număr de telefon")

    <br />

    @Html.EditorFor(m => m.PhoneNumber)

    <br />

    <i class="bi bi-person"></i>
    @Html.Label("FirstName", "Nume", new { @class = "" })

    <br />

    @Html.EditorFor(m => m.FirstName)

    <br />

    <i class="bi bi-person"></i>
    @Html.Label("LastName", "Prenume", new { @class = "" })

    <br />

    @Html.EditorFor(m => m.LastName)

    <br />

    <i class="bi bi-card-list"></i>
    <label>Selectați rolul:</label>
    @Html.DropDownList("newRole", new SelectList(Model.AllRoles, "Value", "Text", ViewBag.UserRole), null, new { @class = "form-control selectare-rol" })

    <br />

    <button id="buton2" class="btn btn-secondary" type="submit">Editare user</button>
}