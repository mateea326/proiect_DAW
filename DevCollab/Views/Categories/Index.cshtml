@{
    ViewBag.Title = "Categorii";
}
<div id="categ">
<h2 id="h-categ">@ViewBag.Title</h2>

<a href="/Subjects/Index" id="a-categ">Înapoi la subiecte</a>
<br />

</div>

@if (TempData.ContainsKey("message"))
{
    <h2 id="succes-msg">@ViewBag.message</h2>
}

<br />

@foreach (var category in ViewBag.Categories)
{
    @Html.Label("CategoryName", "Denumire categorie")
    <p>@category.CategoryName</p>
    <a id="buton" class="btn alert-secondary" href="/Categories/Show/@category.Id">Afișare categorie</a>
    <a id="buton" class="btn alert-secondary" href="/Categories/Edit/@category.Id">Editare categorie</a>
    <br />
    <hr />
    <br />
}
<br />
<a id="buton2" class="btn btn-secondary" href="/Categories/New">Adaugă o nouă categorie</a>
<br />